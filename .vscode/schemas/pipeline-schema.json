{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Configuration",
  "description": "Configuration schema for data pipelines",
  "type": "object",
  "required": [
    "pipeline"
  ],
  "properties": {
    "pipeline": {
      "type": "object",
      "required": [
        "name",
        "environment",
        "source",
        "destination",
        "schedule"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique name for this pipeline",
          "pattern": "^[a-z0-9_]+$"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the pipeline"
        },
        "environment": {
          "type": "string",
          "enum": [
            "dev",
            "stage",
            "prod"
          ],
          "description": "Environment for this pipeline"
        },
        "source": {
          "type": "object",
          "required": [
            "config_file",
            "resources"
          ],
          "properties": {
            "config_file": {
              "type": "string",
              "description": "Source configuration file (in sources/ directory)",
              "pattern": "^sources/.*\\.yaml$"
            },
            "resources": {
              "type": "array",
              "description": "List of resources to extract",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "params": {
              "type": "object",
              "description": "Runtime parameters for the source"
            }
          }
        },
        "destination": {
          "type": "object",
          "required": [
            "config_file",
            "dataset_name"
          ],
          "properties": {
            "config_file": {
              "type": "string",
              "description": "Destination configuration file (in destinations/ directory)",
              "pattern": "^destinations/.*\\.yaml$"
            },
            "dataset_name": {
              "type": "string",
              "description": "Target dataset/schema name"
            },
            "table_prefix": {
              "type": "string",
              "description": "Optional prefix for table names"
            }
          }
        },
        "schedule": {
          "type": "object",
          "required": [
            "enabled",
            "cron"
          ],
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether this pipeline is enabled"
            },
            "cron": {
              "type": "string",
              "description": "Cron expression for scheduling (e.g., '0 */6 * * *' for every 6 hours)",
              "pattern": "^(@(annually|yearly|monthly|weekly|daily|hourly|reboot))|(@every (\\d+(ns|us|Âµs|ms|s|m|h))+)|(((\\S+) ){4}\\S+)$"
            },
            "timezone": {
              "type": "string",
              "description": "Timezone for the schedule",
              "default": "UTC"
            },
            "catchup": {
              "type": "boolean",
              "description": "Whether to run missed schedules",
              "default": false
            }
          }
        },
        "execution": {
          "type": "object",
          "description": "Execution settings",
          "properties": {
            "retries": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10,
              "default": 3
            },
            "retry_delay": {
              "type": "integer",
              "minimum": 0,
              "description": "Delay between retries in seconds",
              "default": 60
            },
            "timeout": {
              "type": "integer",
              "minimum": 0,
              "description": "Pipeline execution timeout in seconds"
            }
          }
        },
        "monitoring": {
          "type": "object",
          "description": "Monitoring and alerting configuration",
          "properties": {
            "sla": {
              "type": "object",
              "properties": {
                "max_duration_minutes": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            },
            "alerts": {
              "type": "object",
              "properties": {
                "on_failure": {
                  "type": "boolean",
                  "default": true
                },
                "on_success": {
                  "type": "boolean",
                  "default": false
                },
                "on_retry": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          }
        }
      }
    }
  }
}
