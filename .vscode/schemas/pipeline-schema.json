{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Configuration",
  "description": "Comprehensive configuration schema for data pipelines with dependencies and execution control",
  "type": "object",
  "required": [
    "pipeline"
  ],
  "properties": {
    "pipeline": {
      "type": "object",
      "required": [
        "name",
        "source",
        "destination"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique name for this pipeline",
          "pattern": "^[a-z0-9_]+$"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the pipeline"
        },
        "tags": {
          "type": "array",
          "description": "Tags for pipeline organization and filtering",
          "items": {
            "type": "string"
          }
        },
        "source": {
          "type": "object",
          "required": [
            "config_file"
          ],
          "properties": {
            "config_file": {
              "type": "string",
              "description": "Source configuration file (in sources/ directory)",
              "pattern": "^(sources/)?[a-z0-9_]+\\.yaml$"
            },
            "resources": {
              "type": "array",
              "description": "List of resources to extract (if omitted, all resources from source config)",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "params": {
              "type": "object",
              "description": "Runtime parameters for the source",
              "additionalProperties": true
            }
          }
        },
        "destination": {
          "type": "object",
          "required": [
            "config_file",
            "dataset_name"
          ],
          "properties": {
            "config_file": {
              "type": "string",
              "description": "Destination configuration file (in destinations/ directory)",
              "pattern": "^(destinations/)?[a-z0-9_]+\\.yaml$"
            },
            "dataset_name": {
              "type": "string",
              "description": "Target dataset/schema name",
              "pattern": "^[a-z0-9_]+$"
            },
            "table_prefix": {
              "type": "string",
              "description": "Optional prefix for table names",
              "pattern": "^[a-z0-9_]*$"
            }
          }
        },
        "dependencies": {
          "type": "array",
          "description": "List of pipeline names that must complete successfully before this pipeline runs",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          }
        },
        "execution": {
          "type": "object",
          "description": "Execution settings",
          "properties": {
            "retries": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10,
              "default": 3
            },
            "retry_delay": {
              "type": "integer",
              "minimum": 0,
              "description": "Delay between retries in seconds",
              "default": 60
            },
            "timeout": {
              "type": "integer",
              "minimum": 0,
              "description": "Pipeline execution timeout in seconds"
            }
          }
        },
        "monitoring": {
          "type": "object",
          "description": "Monitoring and alerting configuration",
          "properties": {
            "sla": {
              "type": "object",
              "properties": {
                "max_duration_minutes": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            },
            "alerts": {
              "type": "object",
              "properties": {
                "on_failure": {
                  "type": "boolean",
                  "default": true
                },
                "on_success": {
                  "type": "boolean",
                  "default": false
                },
                "on_retry": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          }
        }
      }
    }
  }
}
