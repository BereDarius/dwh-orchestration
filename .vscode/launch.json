{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ENVIRONMENT": "dev",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Run Pipeline (Dev)",
      "type": "debugpy",
      "request": "launch",
      "module": "ingestion.cli",
      "args": ["run", "--pipeline", "youtube_to_databricks", "--env", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "ENVIRONMENT": "dev",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "List Pipelines",
      "type": "debugpy",
      "request": "launch",
      "module": "ingestion.cli",
      "args": ["list-pipelines", "--env", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "ENVIRONMENT": "dev",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Discover All Configs",
      "type": "debugpy",
      "request": "launch",
      "module": "ingestion.cli",
      "args": ["discover", "--env", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "ENVIRONMENT": "dev",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Run Tests with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests",
        "-v",
        "--cov=src",
        "--cov-report=html",
        "--cov-report=term"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    }
  ]
}
